.main-chat__message-info__message-list
  .main-chat__message-info__message-list__message-box
    .main-chat__message-info__message-list__message-box__info
      .main-chat__message-info__message-list__message-box__info__name
        = message.user.name
      .main-chat__message-info__message-list__message-box__info__date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .main-chat__message-info__message-list__message-box__message
      - if message.content.present?
        = message.content
      = image_tag message.image.url, class: 'Message__image' if message.image.present?
